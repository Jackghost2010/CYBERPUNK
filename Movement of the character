class_name player extends CharacterBody2D
###ROOT Variables.

### the character looking
var cardinal_direction : Vector2 = Vector2.DOWN

var movement_speed : float = 100
###the normal states that the character will have
var state : String = "idle"

var direction : Vector2 = Vector2.ZERO

@onready var animation_player : AnimationPlayer = $AnimationPlayer
@onready var techno : CharacterBody2D = $Player

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	pass # Replace with function body.


# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process( delta ):
	#### This are the inputs for moving your character.
	direction.x = Input.get_action_strength("move_left") - Input.get_action_strength("move_right")
	direction.y = Input.get_action_strength("move_down") - Input.get_action_strength("move_up")
	if SetState()== true or setDirection() == true:
		UpdateAnimation()
	
	velocity = direction * movement_speed
	### This is when you press this "shift" you started to sprint.
	if Input.is_action_just_pressed("sprint"):
		movement_speed += 300
	### This is when you release the "shift" you stop sprinting.
	if Input.is_action_just_released("sprint"):
		movement_speed -= 300
	pass
	
	
func _physics_process(delta: float) -> void:
	move_and_slide()
	
func setDirection() -> bool:
	
	### vector 2 == the cardinal direction meaning if the cardinal direction == north it will equal y  positive.
	var new_Dir : Vector2 = cardinal_direction
	if direction == Vector2.ZERO:
		return false
	
	if direction.y == 0:
		new_Dir = Vector2.LEFT if direction.x < 0 else Vector2.RIGHT
	elif direction.x == 0:
		new_Dir = Vector2.UP if direction.y < 0 else Vector2.DOWN
	if new_Dir == cardinal_direction:
		return false
	
	cardinal_direction = new_Dir
	
	
	return true
	
func SetState() -> bool:
	### if this stament == idle it will show the idle animation and the game will consider you in a idle state but
	##if you this is not equal idle and == walk then you will change the state to walk.
	var new_state : String = "idle" if direction == Vector2.ZERO else "walk"
	
	if new_state == state:
		return false
	state = new_state
	return true
	
func UpdateAnimation() -> void:
	animation_player.play(state + "_" + AnimDirection())
	pass
func AnimDirection():
	if cardinal_direction == Vector2.DOWN:
		return "down"
	elif cardinal_direction == Vector2.UP:
		return "up"
	elif cardinal_direction == Vector2.RIGHT:
		return "side_right"
	elif cardinal_direction == Vector2.LEFT:
		return "side_left"
	elif cardinal_direction == Vector2.ZERO:
		return "idle" + "_" + AnimDirection()
	
	
